<input type="hidden" id="user_id" value="{{user._id}}">


<div id="deleteQuestionModal" class="modal fade">

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Are you sure ?</h3>
            </div> <!-- /.modal-header -->

            <div class="modal-body">
                <p>You will not be able to recover it !</p>
            </div> <!-- /.modal-body -->

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No, don't delete it</button>
                <button type="button" class="btn btn-primary" onclick="deleteQuestion(); return false;">Yes, delete it</button>
            </div> <!-- /.modal-footer -->

        </div> <!-- /.modal-content -->

    </div><!-- /.modal-dialog -->

</div><!-- /.modal -->



<div class="content">

    <div class="container">

        <div class="portlet portlet-default">

            <div class="portlet-header">
                <h3 class="portlet-title"><u>Questions</u></h3>
            </div> <!-- /.portlet-header -->

            <div class="portlet-body">

                <div id="questions-container" class="table-responsive">

                    <table id="questions-table" class="table table-striped table-bordered thumbnail-table">
                        <thead>
                        <tr>
                            <th style="width: 150px">Image</th>
                            <th>Question</th>
                            <th>Date</th>
                            <th>Stats</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>

                        <tbody>
                        {{#each questionItems}}
                        <tr>
                            <td>
                                <div class="thumbnail">
                                    {{#if this.image}}
                                        <img src="{{this.image}}" width="125" alt="Gallery Image" />
                                    {{else}}
                                        <img src="http://placehold.it/200x100&text=Bombster.io" width="125" alt="Gallery Image" />
                                    {{/if}}
                                </div> <!-- /.thumbnail -->
                            </td>

                            <td class="valign-middle">
                                <p>{{this.question_title}}</p>
                            </td>

                            <td class="valign-middle">{{dateAgo this.created_at}}</td>

                            <td class="file-info valign-middle">
                                <span><strong class="semibold"><i class="fa fa-eye"></i> </strong> {{this.views_count}}</span>
                                <br>
                                <span><strong class="semibold"><i class="fa fa-smile-o"></i> </strong> {{this.vote_yes_count}}</span>
                                <br>
                                <span><strong class="semibold"><i class="fa fa-frown-o"></i> </strong> {{this.vote_no_count}}</span>
                            </td>

                            <td class="text-center valign-middle">
                                <a href="/q/{{this.question_identifier}}" class="btn btn-xs btn-danger"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-xs btn-secondary" data-toggle="modal" href="#" onclick="openModalDeleteQuestion('{{this._id}}'); return false;"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>

                    <div id="questions-loader-container">
                        <img src="/img/loader.gif" class="loader" id="questions-loader">
                    </div>

                </div> <!-- /.table-responsive -->

            </div> <!-- /.portlet-body -->

        </div> <!-- /.portlet -->

    </div> <!-- /.container -->

</div> <!-- .content -->