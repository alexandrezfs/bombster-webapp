<div class="content">

    <div class="container">

        <div class="layout layout-stack-sm layout-main-left">

            <div class="col-sm-7 col-md-8 layout-main">

                <div class="portlet portlet-default">

                    <div class="portlet-header">
                        <h4 class="portlet-title">
                            Search Results
                        </h4>
                    </div>
                    <!-- /.portlet-header -->

                    <div class="portlet-body">

                        {{#if questions}}

                            {{#each questions}}

                                <div class="search-item-container">

                                    <h2><a href="/q/{{this.question_identifier}}">{{{this.question_title}}}</a></h2>

                                    <p><a href="/u/{{this.user.username}}"><img src="{{gravatar_url_small this.user.email}}"> {{{this.user.username}}}</a> {{dateAgo this.created_at}}
                                        .<br>{{this.vote_yes_count}} said <strong>yes</strong>, {{this.vote_no_count}}
                                        said <strong>no</strong>.</p>

                                </div>
                                <!-- /.feed-item -->

                            {{/each}}

                        {{else}}

                            <h3>No results found. Theses other questions might interest you.</h3>

                            {{#each trending_questions}}

                                <div class="search-item-container">

                                    <h2><a href="/q/{{this.question_identifier}}">{{{this.question_title}}}</a></h2>

                                    <p><a href="/u/{{this.user.username}}"><img src="{{gravatar_url_small this.user.email}}"> {{{this.user.username}}}</a> {{dateAgo this.created_at}}
                                        .<br>{{this.vote_yes_count}} said <strong>yes</strong>, {{this.vote_no_count}}
                                        said <strong>no</strong>.</p>

                                </div>
                                <!-- /.feed-item -->

                            {{/each}}

                        {{/if}}

                    </div>
                    <!-- /.portlet-body -->

                </div>
                <!-- /.portlet -->

            </div>
            <!-- /.layout-main -->


            <div class="col-sm-5 col-md-4 layout-sidebar">

                <div class="portlet">
                    {{#if user}}
                        <a href="/dashboard" class="btn btn-primary btn-jumbo btn-block ">New Question</a>
                    {{else}}
                        <a href="/signup" class="btn btn-secondary btn-lg btn-block ">Sign Up</a>
                    {{/if}}
                </div>
                <!-- /.portlet -->

                <h4>Trending Now</h4>

                <div class="well">

                    <ul class="icons-list text-md">
                        {{#each trending_questions}}
                            <li>
                                <i class="icon-li fa fa-comments-o text-primary"></i>
                                <strong class="semibold"><a href="/q/{{this.question_identifier}}">{{{this.question_title}}}</a></strong>
                                <br>
                                <p><a href="/u/{{this.user.username}}"><img src="{{gravatar_url_small this.user.email}}"> {{{this.user.username}}}</a> {{dateAgo this.created_at}}
                                    .<br>{{this.vote_yes_count}} said <strong>yes</strong>, {{this.vote_no_count}}
                                    said <strong>no</strong>.</p>
                            </li>
                        {{/each}}
                    </ul>

                </div>
                <!-- /.well -->

            </div>
            <!-- /.layout-sidebar -->

        </div>
        <!-- /.layout -->

    </div>
    <!-- /.container -->

</div> <!-- .content -->
